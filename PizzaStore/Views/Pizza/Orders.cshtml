@model List<Order>
@{
    ViewData["Title"] = "Import Pizza Orders";
}

<h1>Import Pizza Orders</h1>

<form method="post" enctype="multipart/form-data" asp-action="ImportOrders">
    <div class="form-group">
        <label for="csvFile">Select CSV file:</label>
        <input type="file" class="form-control-file" id="csvFile" name="csvFile"> <button type="submit" class="btn btn-primary">Import</button>
        <br /><br />
    </div>
   
</form>

<table class="table">
    <thead>
        <tr>
            <th>Order Id</th>
            <th>Date</th>
            <th>Time</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.OrderId</td>
                <td>@product.Date</td>
                <td>@product.Time</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <ul class="pagination">
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <li class="@(i == ViewBag.PageNumber ? "active" : "")">
                @Html.ActionLink(i.ToString(), "Orders", new { page = i })
            </li>
        }
    </ul>
</div>