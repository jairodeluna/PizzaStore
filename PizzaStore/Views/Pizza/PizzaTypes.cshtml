@model List<PizzaType>
@{
    ViewData["Title"] = "Import Pizza Type";
}

<h1>Import Pizza Type</h1>

<form method="post" enctype="multipart/form-data" asp-action="ImportPizzaType">
    <div class="form-group">
        <label for="csvFile">Select CSV file:</label>
        <input type="file" class="form-control-file" id="csvFile" name="csvFile">  <button type="submit" class="btn btn-primary">Import</button>
        <br /><br />
    </div>

</form>

<table class="table">
    <thead>
        <tr>
            <th>PizzaType</th>
            <th>Name</th>
            <th>Category</th>
            <th>Ingredients</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.PizzaType1</td>
                <td>@product.Name</td>
                <td>@product.Category</td>
                <td>@product.Ingredients</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <ul class="pagination">
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <li class="@(i == ViewBag.PageNumber ? "active" : "")">
                @Html.ActionLink(i.ToString(), "PizzaTypes", new { page = i })
            </li>
        }
    </ul>
</div>